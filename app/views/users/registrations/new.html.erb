<div style="width: 400px;">
	<%= polaris_stack(gap: "5", vertical: true) do |stack| %>

	<% stack.with_item do %>
		<% polaris_text(variant: :heading3xl, as: :h1, font_weight: :bold, alignment: :center) do %>
			Sign Up
		<% end %>
	<% end %>

	<%= polaris_spacer(vertical: :base) %>

	<%= form_for(resource, as: resource_name, url: registration_path(resource_name), builder: Polaris::FormBuilder) do |f| %>

		<%= f.polaris_text_field(:email, type: :email, placeholder: "Email") %><br/>

		<%= f.polaris_text_field(
			:password, 
			type: :password, 
			placeholder: "Password",
			auto_complete: "new_password"
		) 
		%>
		<% if @minimum_password_length %>
			<em><%= @minimum_password_length %> characters minimum</em>
		<% end %>

		<%= polaris_spacer(vertical: :base) %>
		
		<%= f.polaris_text_field(:password_confirmation, type: :password, placeholder: "Confirm Password", auto_complete: "new_password") %><br>

		<%= polaris_button(submit: true, full_width: true, size: :large, primary: true) { "Sign Up" } %><br>

		<%= polaris_button(url: "/users/sign_in", submit: false, plain: true, monochrome: true) { "Login" } %>
	<% end %>

<% end %>
</div>
